<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.huhyn.swissstyle.SecondaryController">
    <children>
      <Label text="New Tournement">
         <font>
            <Font size="26.0" />
         </font>
         <padding>
            <Insets bottom="-10.0" />
         </padding>
      </Label>
        <Label text="Tournement Name">
         <padding>
            <Insets bottom="-20.0" />
         </padding></Label>
      <TextField fx:id="name" />
      <Label text="Tournement Description">
         <padding>
            <Insets bottom="-10.0" />
         </padding>
      </Label>
      <TextArea fx:id="des" prefHeight="200.0" prefWidth="370.0" />
      <Label fx:id="incomplete" style="-fx-background-color: pink;" text="Missing tournement name." visible="false">
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </Label>
        <Button onAction="#done" style="-fx-background-color: #b7e0a6;" text="Done" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
